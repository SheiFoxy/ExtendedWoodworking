<Patch>
    <Operation Class="PatchOperationConditional">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName="Bow_Short" and not(stuffCategories)]/costList[WoodLog]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="Bow_Short"]/costList/WoodLog</xpath>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Bow_Short"]</xpath>
                    <value>
                        <stuffCategories>
                            <li>Woody</li>
                        </stuffCategories>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Bow_Short"]</xpath>
                    <value>
                        <costStuffCount>30</costStuffCount>
                    </value>
                </li>
                <li Class="PatchOperationConditional">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="Bow_Short"]/constructEffect</xpath>
                    <match Class="PatchOperationRemove">
                        <xpath>/Defs/ThingDef[defName="Bow_Short"]/constructEffect</xpath>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>
