<Patch>
    <!-- Create WoodLog defs -->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <li Class="ModCheck.isModLoaded">
            <modName>VGP Xtra Trees and Flowers</modName>
            <yourMod>Extended Woodworking</yourMod>
        </li>
        <li Class="ModCheck.loadOrder">
            <modName>VGP Xtra Trees and Flowers</modName>
            <yourMod>Extended Woodworking</yourMod>
            <errorOnFail>true</errorOnFail>
        </li>
        <li Class="PatchOperationTest">
            <xpath>/Defs/TerrainDef[defName="WoodLog_Birch"]</xpath>
        </li>
        <li Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value />
        </li>
    <Operation>

    <!-- Create Floor defs -->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <li Class="ModCheck.isModLoaded">
            <modName>VGP Xtra Trees and Flowers</modName>
            <yourMod>Extended Woodworking</yourMod>
        </li>
        <li Class="ModCheck.loadOrder">
            <modName>VGP Xtra Trees and Flowers</modName>
            <yourMod>Extended Woodworking</yourMod>
            <errorOnFail>true</errorOnFail>
        </li>
        <li Class="PatchOperationTest">
            <xpath>/Defs/TerrainDef[defName="WoodPlankFloor_Birch"]</xpath>
        </li>
        <li Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value />
        </li>
    <Operation>
    
    <!-- Patch trees -->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <li Class="ModCheck.isModLoaded">
            <modName>VGP Xtra Trees and Flowers</modName>
            <yourMod>Extended Woodworking</yourMod>
        </li>
        <li Class="ModCheck.loadOrder">
            <modName>VGP Xtra Trees and Flowers</modName>
            <yourMod>Extended Woodworking</yourMod>
            <errorOnFail>true</errorOnFail>
        </li>
        <li Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName="PlantTree%NAME%"]/plant</xpath>
            <value>
                <harvestedThingDef>WoodLog_%NAME%</harvestedThingDef>
            </value>
        </li>
    <Operation>
</Patch>