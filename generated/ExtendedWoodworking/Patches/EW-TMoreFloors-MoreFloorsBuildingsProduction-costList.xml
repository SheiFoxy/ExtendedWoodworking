<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <operations>
      <success>Always</success>
      <li Class="ModCheck.isModLoaded">
        <modName>[T] MoreFloors</modName>
        <yourMod>Extended Woodworking</yourMod>
      </li>
      <li Class="ModCheck.loadOrder">
        <modName>[T] MoreFloors</modName>
        <yourMod>Extended Woodworking</yourMod>
        <errorOnFail>true</errorOnFail>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName="BenchWoolLoom"]/costList/WoodLog</xpath>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="BenchWoolLoom"]</xpath>
        <value>
          <stuffCategories>
            <li>Woody</li>
          </stuffCategories>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="BenchWoolLoom"]</xpath>
        <value>
          <costStuffCount>40</costStuffCount>
        </value>
      </li>
      <li Class="PatchOperationConditional">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName="BenchWoolLoom"]/constructEffect</xpath>
        <match Class="PatchOperationRemove">
          <xpath>/Defs/ThingDef[defName="BenchWoolLoom"]/constructEffect</xpath>
        </match>
      </li>
    </operations>
  </Operation>
</Patch>