<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationReplace">
                <success>Always</success>
                <xpath>/Defs/ThingDef[category="Building" or contains(thingClass, "Building")]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs[li="WoodLog" and not(li!="WoodLog")]</xpath>
                <value>
                    <thingDefs>
                        <li>WoodLog</li>
                        <li>WoodLog_Birch</li>
                        <li>WoodLog_Cecropia</li>
                        <li>WoodLog_Cypress</li>
                        <li>WoodLog_Drago</li>
                        <li>WoodLog_Maple</li>
                        <li>WoodLog_Oak</li>
                        <li>WoodLog_Palm</li>
                        <li>WoodLog_Pine</li>
                        <li>WoodLog_Poplar</li>
                        <li>WoodLog_Teak</li>
                        <li>WoodLog_Willow</li>
                    </thingDefs>
                </value>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>VGP Xtra Trees and Flowers</li>
                    <li>1185281838</li>
                </mods>
                <match Class="PatchOperationConditional">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="PlantTreeAcacia"]</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[category="Building" or contains(thingClass, "Building")]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs[li="WoodLog_Birch"]</xpath>
                        <value>
                            <thingDefs>
                                <li>WoodLog</li>
                                <li>WoodLog_Acacia</li>
                                <li>WoodLog_Birch</li>
                                <li>WoodLog_Camellia</li>
                                <li>WoodLog_Cecropia</li>
                                <li>WoodLog_Cypress</li>
                                <li>WoodLog_Drago</li>
                                <li>WoodLog_JapaneseMaple</li>
                                <li>WoodLog_Maple</li>
                                <li>WoodLog_Oak</li>
                                <li>WoodLog_Palm</li>
                                <li>WoodLog_Pine</li>
                                <li>WoodLog_Poplar</li>
                                <li>WoodLog_RedMaple</li>
                                <li>WoodLog_Teak</li>
                                <li>WoodLog_Willow</li>
                            </thingDefs>
                        </value>
                    </match>
                </match>
            </li>
            <li Class="PatchOperationFindMod">
                <success>Always</success>
                <mods>
                    <li>Nature's Pretty Sweet</li>
                    <li>1211694919</li>
                </mods>
                <match Class="PatchOperationConditional">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="RedWoodLog"]</xpath>
                    <match Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[category="Building" or contains(thingClass, "Building")]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs[li="WoodLog_Birch"]</xpath>
                        <value>
                            <li>RedWoodLog</li>
                        </value>
                    </match>
                </match>
            </li>
        </operations>
    </Operation>
</Patch>